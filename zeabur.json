{
  "$schema": "https://schema.zeabur.app/template.json",
  "name": "Trump Tweet Monitor",
  "description": "特朗普推特监控机器人，通过 PushPlus 推送到微信",
  "icon": "https://zeabur.com/favicon.ico",
  "services": [
    {
      "name": "trump-monitor",
      "template": "PYTHON",
      "rootDirectory": ".",
      "env": {
        "PUSHPLUS_TOKEN": "${PUSHPLUS_TOKEN}",
        "PUSHPLUS_TOPIC": "${PUSHPLUS_TOPIC}"
      }
    }
  ]
}
